<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Toolbar样式-->
    <!--Toolbar弹出菜单样式-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?attr/containerBg</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DayTheme" parent="AppTheme">
        <!--导航条颜色-->
        <item name="toolbarBg">@color/colorPrimary</item>
        <!--页面容器背景色（白）-->
        <item name="containerBg">@color/containerBg</item>
        <!--条目背景色（浅蓝）-->
        <item name="itemBoxBg">@color/white</item>
        <item name="accentColor">@color/colorAccent</item>
        <!--浅色底深色字-->
        <item name="darkText">@color/darkText</item>
        <!--深色底浅色字-->
        <item name="mediumText">@color/mediumText</item>
        <item name="lightText">@color/lightTextGray</item>
        <!--不可点击的按钮颜色-->
        <item name="disabledBg">@color/dividerGray</item>
        <item name="linkBlue">@color/linkBlue</item>
        <item name="todoYellow">@color/todoYellow</item>
        <item name="dividerGray">@color/dividerGray</item>
        <item name="folderIcon">@drawable/baseline_folder_open_black_24dp</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="toolbarBg">@color/colorPrimaryDark</item>
        <item name="containerBg">@color/containerBgNight</item>
        <item name="itemBoxBg">@color/itemBgNight</item>
        <item name="accentColor">@color/colorAccent</item>
        <item name="darkText">@color/darkTextNight</item>
        <item name="mediumText">@color/mediumText</item>
        <item name="lightText">@color/lightTextGray</item>
        <item name="disabledBg">@color/disabledBgNight</item>
        <item name="linkBlue">@color/linkBlue</item>
        <item name="todoYellow">@color/todoYellow</item>
        <item name="dividerGray">@color/dividerGrayNight</item>
        <item name="folderIcon">@drawable/baseline_folder_open_gray_24dp</item>
    </style>

<!--    TODO: add style for popups  -->

</resources>
